@model LoginUser


<form action="/Login" method="post" class="col-5">
<h2 class="mb-5 mt-5 text-center">Login</h2>
    <div class="form-group">
        <label class="font-weight-bold" asp-for="LoginEmail"></label>
        <input asp-for="LoginEmail" class="form-control">
        <span asp-validation-for="LoginEmail"></span>
    </div>

    <div class="form-group">
        <label class="font-weight-bold" asp-for="LoginPassword"></label>
        <input asp-for="LoginPassword" class="form-control">
        <span asp-validation-for="LoginPassword"></span>
    </div>
    <input type="submit" value="Login" class="btn btn-info mt-3 float-right">
</form>

